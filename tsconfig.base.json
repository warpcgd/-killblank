{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": false,
    "strict": true,
    "noEmitHelpers": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "typedocOptions": {
    "mode": "file",
    "out": "public",
    "includeDeclarations": true,
    "excludeExternals": true,
    "stripInternal": true,
    "disableSources": true,
    "exclude": "**/!(prerenderSkeletonPlugin|global.d|skeletonLoader).ts"
  },
  "exclude": ["jest.config.js"]
}
